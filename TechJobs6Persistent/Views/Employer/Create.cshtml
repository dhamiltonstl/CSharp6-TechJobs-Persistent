@using TechJobs6Persistent.ViewModels
@model AddEmployerViewModel

<h1>Add New Employer</h1>

<form asp-controller="Employer" asp-action="ProcessCreateEmployerForm" method="POST">

    <div class="form-group">
        <label asp-for="Name">Employer Name</label>
        <br />
        <input asp-for="Name" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <br />

    <div class="form-group">
        <label asp-for="Location">Employer Location</label>
        <br />
        <input asp-for="Location" />
        <span asp-validation-for="Location" class="text-danger"></span>
    </div>

    <br />

    <input type="submit" value="Add Employer" />

</form>
